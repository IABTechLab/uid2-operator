<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoders are assigned the type
             ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
        <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
            <layout class="com.uid2.shared.logback.MaskingPatternLayout">
                <pattern>%d{HH:mm:ss.SSS} thread=%thread level=%-5level class=%logger{36} - %msg %ex%n</pattern>
            </layout>
        </encoder>
    </appender>

    <!-- Temporarily enable DEBUG logging for store refresh staleness monitoring -->
    <logger name="com.uid2.operator.vertx.OperatorShutdownHandler" level="DEBUG"/>
    
    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
